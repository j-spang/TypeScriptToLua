{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es2017",
        "lib": ["es2017"],
        "types": ["node", "jest"],
        "experimentalDecorators": true,

        "noEmit": true,
        "module": "commonjs"
    },
    "exclude": ["translation/transformation", "cli/errors", "cli/watch", "transpile/directories", "transpile/outFile"]
}
